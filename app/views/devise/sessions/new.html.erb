<div id="sessions">
  <div class="container">
    <div class="row">
      <div class="col-lg-4 col-md-10 mt-5 mx-auto">
        <section><h2><i class="fas fa-sign-in-alt"></i>  <%= t('.sign_in') %></h2></section>
        <p id="alert"><%= alert %></p>
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>

          <div class="field mt-3">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="field mt-3">
            <%= f.label :password, "パスワード" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field  mt-1">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions mt-4 mb-2">
            <%= f.submit t('.sign_in'), class: "btn btn-3" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>

