<div id="registrations">
  <div class="container">
    <div class="row">

      <div class="col-lg-4 col-sm-10 mt-3">
        <%= render 'layouts/errors', obj: @user  %>
      </div>

      <div class="col-lg-4 col-md-10 mt-5 mx-auto">
        <section><h2><i class="fas fa-edit"></i> <%= t('.sign_up') %></h2></section>
        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
          <div class="field mt-2">
            <%= f.label :"名前" %><br />
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>
          <div class="field mt-2">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          <div class="field mt-2">
            <%= f.label :password, "パスワード" %>
            <% if @minimum_password_length %>
            <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>
          <div class="field mt-2">
            <%= f.label :password_confirmation, "パスワード確認" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
          <div class="actions mt-4 mb-2">
            <%= f.submit t('.sign_up'), class: "btn btn-3" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>

      <div class="col-lg-4 col-sm-10 mb-3"></div>

    </div>
  </div>
</div>