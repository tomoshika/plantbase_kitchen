<div class="new-comment mt-3 mb-4">
  <h5>コメント<i class="far fa-comment"></i></h5>
  <%= form_with model:[recipe, comment], remote: true do |f| %>
    <%= f.text_area :recipe_comment, placeholder:"コメント入力", class: "form-control mb-2" %>
    <%= f.submit "送信", class: "btn btn-1 float-right mt-2 mb-3" %>
  <% end %>
</div>
