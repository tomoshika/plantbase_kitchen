<div class="mb-3">
  <% recipe.comments.each do |comment| %>
    <div class="row pt-2 border-bottom">
      <div class="col-2">
        <%= attachment_image_tag comment.user, :image, format: 'jpeg', fallback: "no_image.jpg", class: "user-icon-mini" %><br>
        <%= link_to comment.user.name, user_path(comment.user), class: "text-dark" %>
      </div>
      <div class="col-6">
        <%= comment.recipe_comment %>
      </div>
      <div class="col-4">
        <% if comment.user == current_user %>
          <div class="row">
            <%= link_to "", recipe_comment_path(recipe, comment), method: :delete, remote: true, class: "btn btn-sm btn-1 fas fa-trash-alt mx-auto" %>
          </div>
        <% end %>
        <div class="row mt-">
          <%= comment.created_at.strftime('%Y.%m.%d') %>
        </div>
      </div>

    </div>
  <% end %>
</div>