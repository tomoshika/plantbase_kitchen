<div class="mb-3">
  <% recipe.comments.each do |comment| %>
    <div class="row">
      <div class="col-2">
        <%= attachment_image_tag comment.user, :image, format: 'jpeg', fallback: "no_image.jpg", class: "user-icon-mini" %></br>
        <%= link_to comment.user.name, user_path(comment.user), class: "text-dark" %>
      </div>
      <div class="col-6"><%= comment.recipe_comment %></div>
      <% if comment.user == current_user %>
        <div class="col-1"><%= link_to "", recipe_comment_path(recipe, comment), method: :delete, remote: true, class: "btn btn-sm btn-1 fas fa-trash-alt" %></div>
      <% end %>
    </div>
  <% end %>
</div>