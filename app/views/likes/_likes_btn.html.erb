<% if recipe.liked_by?(current_user) %>

    <%= link_to recipe_likes_path(recipe), method: :delete, local: true, class: "fas fa-heart btn-favorite" %>
    <%= recipe.likes.count %>

  <% else %>
    <%= link_to recipe_likes_path(recipe), method: :post, local: true, class: "fas fa-heart btn-unfavorite" %>
    <%= recipe.likes.count %>
<% end %>