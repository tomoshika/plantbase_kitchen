<div class="container">
  <div class="row mt-3">
    <section><h3>レシピ新規投稿</h3></section>
    <div class="col-sm-12 col-md-8 col-lg-6 px-sm-0 mx-auto">
      <img id="preview" style="width:40%;">

      <script>
        $('#recipe_recipe_image').on('change', function (e) {
          var reader = new FileReader();
          reader.onload = function (e) {
              $("#preview").attr('src', e.target.result);
          }
          reader.readAsDataURL(e.target.files[0]);
      });
      </script>

      <%= render 'layouts/errors', obj: @recipe %>
      <%= render "recipes/form", recipe: @recipe %>
    </div>
　</div>
</div>
