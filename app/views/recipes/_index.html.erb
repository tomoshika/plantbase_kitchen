<% recipes.each do |recipe| %>
  <div class="card" style="width: 16rem;">
    <%= link_to recipe_path(recipe.id), class: "link" do %>
      <%= attachment_image_tag recipe, :recipe_image, format: 'jpeg', fallback: "no_image.jpg", class: "card-img-top" %></br>
      <div class="card-body">
        <div><%= recipe.title %></div>
      </div>
    <% end %>
    <p><%= recipe.memo %></p>
  </div>
<% end %>