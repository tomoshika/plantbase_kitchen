<div class="row card-list-container">
  <% recipes.each do |recipe| %>
    <div class="col-md">
      <div class="card mx-auto mt-4 shadow-lg" style="width: 20rem;">
        <%= link_to recipe_path(recipe.id) do %>
          <%= attachment_image_tag recipe, :recipe_image, format: 'jpeg', fallback: "no_image.jpg", class: "card-img-top" %>
          <!--<#%= image_tag(recipe.recipe_image.to_s) %>-->
        <% end %>
        <div class="card-body">
          <div class="row">
            <div class="col-4">
              <%= attachment_image_tag recipe.user, :image, :fill, 20, 20, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
            </div>
            <div class="col-8">
              <p class="card-title">
                <%= link_to recipe_path(recipe.id), class:"text-dark" do %>
                  <%= recipe.title %>
                <% end %>
              <p>
              <p class="card-text">
                <%= recipe.created_at.strftime('%Y.%m.%d') %></br>
                <%= render_with_hashtags(recipe.memo) %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>