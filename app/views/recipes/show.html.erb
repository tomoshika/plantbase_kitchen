<div class="container">
  <div class="row mt-3">
    <p id="notice"><%= notice %></p>
    <div class="col-md-10 mx-auto">
      <div class="row">
        <div class="col-5">
          <%= attachment_image_tag @recipe, :recipe_image, format: 'jpeg', fallback: "no_image.jpg", size: "300x300" %>
          <% if @recipe.user == current_user %>
            <%= link_to 'レシピを編集する', edit_recipe_path(@recipe), class: "btn btn-secondary mt-2 offset-2" %></br>
            <%= link_to 'レシピを削除する', recipe_path(@recipe.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-secondary mt-1 offset-2" %>
          <% end %>
        </div>
        <div class="col-7">
          <h3><%= @recipe.title %></h3>
          <table>
            <tr>
              <td><%= @recipe.created_at.strftime('%Y.%m.%d') %></td>
              <td>
                <div id="like">
                  <% if user_signed_in? %>
                   <%= render 'likes/likes_btn', recipe: @recipe %>
                  <% end %>
                </div>
              </td>
              <td><%= attachment_image_tag @user, :image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %></td>
              <td><%= link_to @recipe.user.name, user_path(@user) %></td>
            </tr>
          </table>
          <table class="table table-sm">
            <!--<tr><#%= @recipe.memo %></tr>-->
            <tr><%= render_with_hashtags(@recipe.memo) %></tr>
          　<tr>
              <th>材料</th>
              <th>分量</th>
            </tr>
            <% @foods.each do |food| %>
            <tr>
             <td><%= food.item %></td>
             <td><%= food.quantity %></td>
            </tr>
            <% end %>
          </table>
        </div>
      </div>
      <div class="row mt-2">
        <div class="col-5">
          <% if user_signed_in? %>
            <%= render 'comments/form', recipe: @recipe, comment: @comment %>
            <div id="comment">
              <%= render 'comments/index', recipe: @recipe %>
            </div>
          <% end %>
        </div>
        <div class="col-7">
          <table class="mt-3">
            <th>作り方</th>
            <% @steps.each do |step| %>
              <tr>
                <td><%= step.process %></td>
                <td><%= attachment_image_tag step, :process_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x50" %></td>
              <tr>
            <% end %>
          </table>
        </div>
      </div>

    </div>
  </div>
</div>