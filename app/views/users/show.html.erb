<div class="container">
  <div class="row mx-auto mt-3">
    <p id="notice"><%= notice %></p>
    <div class="col-md-4 offset-2">
      <%= attachment_image_tag @user, :image, format: 'jpeg', fallback: "no_image.jpg", size: "200x150" %>
    </div>
    <div class="col-md-4 pt-5">
      <table>
        <tr>
          <th><%= @user.name %></th>
        </tr>
          <td><%= @user.followings.count%>フォロー<%= @user.followers.count %>フォロワー</td>
        <tr>
          <td><%= @user.introduction %></td>
        </tr>
      </table>
      <% if @user == current_user %>
        <%= link_to 'レシピを投稿する', new_recipe_path, class: "btn btn-secondary" %>
        <%= link_to 'アカウント情報編集', edit_user_path(@user), class: "btn btn-secondary mt-1" %>
      <% else %>
        <% if @user.is_followed_by?(current_user) %>
          <%= link_to "フォロー外す", user_relationships_path(@user), method: :delete, class: "btn btn-secondary" %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(@user), method: :post, class: "btn btn-secondary" %>
        <% end %>
      <% end %>
    </div>
　</div>
　<div class="row mx-auto mt-3">
　  <%= render "recipes/index", recipes: @recipes %>
　</div>
</div>
