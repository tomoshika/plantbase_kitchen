<div class="container">
  <div class="row mt-3">
    <div class="col">
      <section><h3><%= @user.name %>さんのフォロワー</h3></section>
      <% if @user == current_user %>
        <%= link_to 'マイページに戻る', user_path(@user), class: "btn btn-1 mt-3 ml-1" %>
      <% else %>
        <%= link_to user_path(@user), class: "btn btn-1 mt-3 ml-1" do %>
          <%= @user.name %>さんのページに戻る
        <% end %>
      <% end %>
      <%= render 'index', users: @users %>
    </div>
  </div>
</div>